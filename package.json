{
    "name": "ares-v2",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "test": "jest --env=jsdom",
        "component": "hygen component new",
        "lint": "stylelint components/**/*.scss",
        "storybook": "start-storybook -p 6006 -s public",
        "build-storybook": "build-storybook -s public"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ],
        "overrides": [
            {
                "files": [
                    "**/*.stories.*"
                ],
                "rules": {
                    "import/no-anonymous-default-export": "off"
                }
            }
        ]
    },
    "jest": {
        "coverageReporters": [
            "html",
            "text"
        ],
        "collectCoverageFrom": [
            "<rootDir>/**/*.{ts,tsx}",
            "!<rootDir>/**/*.stories.tsx",
            "!<rootDir>/**/*.d.ts",
            "!<rootDir>/**/types.ts",
            "!<rootDir>/node_modules/"
        ],
        "coverageThreshold": {
            "global": {
                "lines": 80,
                "statements": 80,
                "functions": 80,
                "branches": 70
            },
            "./components/": {
                "statements": 90
            }
        },
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
            "\\.(css|less|scss|sass)$": "identity-obj-proxy"
        }
    },
    "lint-staged": {
        "src/**/*.{css,scss,sass}": [
            "yarn lint --fix",
            "prettier --write"
        ],
        "src/**/*.{tsx,ts,css,scss,md}": [
            "prettier --write"
        ],
        "src/**/*.{tsx,ts}": [
            "yarn test --findRelatedTests --bail --ci --watchAll=false --silent"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "dependencies": {
        "@storybook/builder-webpack5": "^6.3.5",
        "@storybook/manager-webpack5": "^6.4.0-alpha.20",
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^12.0.0",
        "@testing-library/user-event": "^13.2.0",
        "@types/jest": "^26.0.24",
        "@types/node": "^16.4.1",
        "@types/react-dom": "^17.0.9",
        "autoprefixer": "^9",
        "clsx": "^1.1.1",
        "css-loader": "^6.2.0",
        "headlessui": "^0.0.0",
        "heroicons": "^1.0.2",
        "next": "11.0.1",
        "postcss": "^7",
        "react-circular-progressbar": "^2.0.4",
        "react-habitat": "^1.0.1",
        "react-merge-refs": "^1.1.0",
        "tailwindcss": "npm:@tailwindcss/postcss7-compat",
        "web-vitals": "^2.1.0"
    },
    "devDependencies": {
        "@babel/helper-builder-react-jsx": "^7.14.5",
        "@babel/helper-builder-react-jsx-experimental": "^7.12.11",
        "@storybook/addon-a11y": "^6.3.5",
        "@storybook/addon-actions": "^6.3.5",
        "@storybook/addon-essentials": "^6.3.5",
        "@storybook/addon-links": "^6.3.5",
        "@storybook/node-logger": "^6.3.5",
        "@storybook/preset-scss": "^1.0.3",
        "@storybook/react": "^6.3.5",
        "@types/react": "17.0.14",
        "@whitespace/storybook-addon-html": "^5.0.0",
        "babel-jest": "^27.0.6",
        "eslint": "7.31.0",
        "eslint-config-next": "11.0.1",
        "husky": "^7.0.1",
        "hygen": "^6.1.0",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^27.0.6",
        "lint-staged": "^11.1.1",
        "pinst": "^2.1.6",
        "postcss-loader": "^5.0.0",
        "prettier": "^2.3.2",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "sass": "^1.36.0",
        "sass-loader": "^10.1.1",
        "storybook-addon-performance": "^0.16.0",
        "stylelint": "^13.13.1",
        "stylelint-a11y": "^1.2.3",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-sass-guidelines": "^8.0.0",
        "stylelint-high-performance-animation": "^1.5.2",
        "stylelint-no-indistinguishable-colors": "^1.3.0",
        "typescript": "4.3.5",
        "webpack": "5.39.1"
    }
}
